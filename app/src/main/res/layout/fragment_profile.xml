<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:ignore="MissingPrefix">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:paddingTop="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="@dimen/_8sdp"
                        card_view:cardElevation="3dp"
                        card_view:cardUseCompatPadding="true">

                        <android.support.v4.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="@dimen/_24sdp"
                            android:layout_marginTop="@dimen/_45sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_58sdp"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:layout_marginRight="@dimen/_8sdp"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="1dp"
                                    card_view:cardElevation="2dp"
                                    card_view:cardUseCompatPadding="true">

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/colorPrimaryDark"></View>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="6dp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:weightSum="10">


                                        <TextView
                                            fontPath="Raleway-Medium.ttf"
                                            android:layout_width="0px"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/_6sdp"
                                            android:layout_weight="3"
                                            android:gravity="center_vertical"
                                            android:text="@string/name"
                                            android:textColor="@color/dark_gray"
                                            android:textSize="@dimen/default_text_size" />

                                        <TextView
                                            android:id="@+id/txt_name"
                                            android:layout_width="0px"
                                            android:layout_height="@dimen/_26sdp"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="7"
                                            android:background="@drawable/shape_square_rounded_gray"
                                            android:gravity="center_vertical"
                                            android:maxLength="16"
                                            android:paddingLeft="@dimen/_8sdp"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/default_text_size" />
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_58sdp"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:layout_marginRight="@dimen/_8sdp"

                                    android:layout_marginTop="@dimen/_8sdp"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="1dp"
                                    card_view:cardElevation="2dp"
                                    card_view:cardUseCompatPadding="true">

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/colorPrimaryDark"></View>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="6dp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:weightSum="10">


                                        <TextView
                                            fontPath="Raleway-Medium.ttf"
                                            android:layout_width="0px"

                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/_6sdp"
                                            android:layout_weight="3"
                                            android:gravity="center_vertical"
                                            android:text="@string/height"
                                            android:textColor="@color/dark_gray"
                                            android:textSize="@dimen/default_text_size" />

                                        <LinearLayout
                                            android:layout_width="0px"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="7"
                                            android:visibility="visible">

                                            <TextView
                                                android:id="@+id/txt_height"
                                                android:layout_width="0px"
                                                android:layout_height="@dimen/_26sdp"
                                                android:layout_gravity="center_vertical"
                                                android:layout_weight="3"
                                                android:background="@drawable/shape_square_rounded_gray"
                                                android:gravity="center_vertical"
                                                android:paddingLeft="@dimen/_8sdp"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/default_text_size" />

                                            <TextView
                                                android:layout_width="0px"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginLeft="5dp"
                                                android:layout_weight="2"
                                                android:gravity="center_vertical"
                                                android:text="@string/cm"
                                                android:textColor="@color/dark_gray"
                                                android:textSize="@dimen/default_text_size" />

                                        </LinearLayout>

                                    </LinearLayout>
                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_58sdp"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:layout_marginRight="@dimen/_8sdp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:gravity="center_vertical"

                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="1dp"
                                    card_view:cardElevation="2dp"
                                    card_view:cardUseCompatPadding="true">

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/colorPrimaryDark"></View>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="6dp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:weightSum="10">


                                        <TextView
                                            fontPath="Raleway-Medium.ttf"
                                            android:layout_width="0px"

                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/_6sdp"
                                            android:layout_weight="3"
                                            android:gravity="center_vertical"
                                            android:text="@string/weight"
                                            android:textColor="@color/dark_gray"
                                            android:textSize="@dimen/default_text_size" />

                                        <LinearLayout
                                            android:layout_width="0px"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="7"
                                            android:visibility="visible">

                                            <TextView
                                                android:id="@+id/txt_weight"
                                                android:layout_width="0px"
                                                android:layout_height="@dimen/_26sdp"
                                                android:layout_gravity="center_vertical"
                                                android:layout_weight="3"

                                                android:background="@drawable/shape_square_rounded_gray"
                                                android:gravity="center_vertical"
                                                android:paddingLeft="@dimen/_8sdp"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/default_text_size" />

                                            <TextView
                                                android:layout_width="0px"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginLeft="5dp"
                                                android:layout_weight="2"
                                                android:gravity="center_vertical"
                                                android:text="@string/kg"
                                                android:textColor="@color/dark_gray"
                                                android:textSize="@dimen/default_text_size" />

                                        </LinearLayout>


                                    </LinearLayout>
                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_58sdp"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:layout_marginRight="@dimen/_8sdp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:visibility="visible"
                                    app:cardBackgroundColor="@color/white"

                                    app:cardCornerRadius="1dp"
                                    card_view:cardElevation="2dp"
                                    card_view:cardUseCompatPadding="true">

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/colorPrimaryDark"></View>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="6dp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:weightSum="10">

                                        <TextView
                                            fontPath="Raleway-Medium.ttf"

                                            android:layout_width="0px"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/_6sdp"
                                            android:layout_weight="3"
                                            android:gravity="center_vertical"
                                            android:text="@string/Steps"

                                            android:textColor="@color/dark_gray"
                                            android:textSize="@dimen/default_text_size" />


                                        <EditText
                                            android:id="@+id/edt_steps"
                                            android:layout_width="0px"
                                            android:layout_height="@dimen/_26sdp"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="7"
                                            android:background="@drawable/shape_square_rounded_gray"
                                            android:gravity="center_vertical"
                                            android:hint="@string/max_steps"
                                            android:imeOptions="actionNext"
                                            android:inputType="number"
                                            android:maxLength="5"
                                            android:paddingLeft="@dimen/_8sdp"
                                            android:paddingRight="10dp"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/default_text_size" />


                                    </LinearLayout>

                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_58sdp"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:layout_marginRight="@dimen/_8sdp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:visibility="visible"
                                    app:cardBackgroundColor="@color/white"

                                    app:cardCornerRadius="1dp"
                                    card_view:cardElevation="2dp"
                                    card_view:cardUseCompatPadding="true">

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/colorPrimaryDark"></View>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="6dp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:weightSum="10">

                                        <TextView
                                            fontPath="Raleway-Medium.ttf"

                                            android:layout_width="0px"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/_6sdp"
                                            android:layout_weight="3"
                                            android:gravity="center_vertical"
                                            android:text="@string/Calories"

                                            android:textColor="@color/dark_gray"
                                            android:textSize="@dimen/default_text_size" />


                                        <EditText
                                            android:id="@+id/edt_calories"
                                            android:layout_width="0px"
                                            android:layout_height="@dimen/_26sdp"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="7"
                                            android:background="@drawable/shape_square_rounded_gray"
                                            android:gravity="center_vertical"
                                            android:hint="@string/max_calories"
                                            android:imeOptions="actionDone"
                                            android:inputType="number"
                                            android:maxLength="5"
                                            android:paddingLeft="@dimen/_8sdp"
                                            android:paddingRight="10dp"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/default_text_size" />


                                    </LinearLayout>

                                </android.support.v7.widget.CardView>


                            </LinearLayout>
                        </android.support.v4.widget.NestedScrollView>

                    </android.support.v7.widget.CardView>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/frame"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_minus39sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_save"
                        fontPath="Raleway-Bold.ttf"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/shape_save_btn"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:text="@string/save"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size"
                        android:textStyle="bold" />


                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_circle_gradient"
                android:contentDescription="@null">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user"
                    android:layout_width="@dimen/_85sdp"
                    android:layout_height="@dimen/_85sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@null"
                    android:src="@drawable/logo_fit"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="1dp">

                </de.hdodenhof.circleimageview.CircleImageView>

            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="100dp"-->
    <!--android:background="#50000000"></View>-->
</FrameLayout>